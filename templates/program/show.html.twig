{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }} : {% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

    <div>

    <div>
        <h2>Liste des saisons</h2>
    </div>

    {% for season in seasons %}
        <p>
            <a href="{{ path("program_season_show", { program: program.id , season: season.id}) }}">Saison {{ season.number }}, {{ season.year }}</a>
        </p>
    {% endfor %}
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
    <p>
        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li>
                <button class="btn btn-dark"><a href="{{ path("app_actor_show", { id: actor.id }) }}">{{ actor.name }}</button>
                </li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </p>
{% endblock %}



