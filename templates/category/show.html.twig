{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}

    <main>

        <h1 class="programBigTitle">Catégorie {{ category.name }}</h1>

        <section>
            {% for program in programs %}
                <div class="programCard">
                    <div class="programTitle">
                        <h3>{{ program.title }}</h3>
                        <p>Catégorie : {{ program.category.name }}</p>
                        <img src="{{ program.poster }}">
                    </div>
                    <p>{{ program.synopsis }}<p>
                    <button class="btn btn-dark"><a href="{{ path("program_show", { id: program.id }) }}">En savoir plus</a></button>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </section>

    </main>
    
{% endblock %}